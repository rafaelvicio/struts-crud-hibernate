<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE form-validation PUBLIC
          "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN"
          "http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">

<form-validation>
	<formset>
		<form name="studentIdBean">
			<field property="id" depends="required,integer">
				<arg0 key="label.id" />
				<msg name="required" key="error.id.required" />
				<msg name="integer" key="error.id.integer" />
			</field>
		</form>
		<form name="studentBean">
			<field property="id" depends="required,integer">
				<arg0 key="label.id" />
				<msg name="required" key="error.id.required" />
				<msg name="integer" key="error.id.integer" />
			</field>
			<field property="name" depends="required">
				<arg0 key="label.name" />
				<msg name="required" key="error.name.required" />
			</field>
			<field property="course" depends="required">
				<arg0 key="label.course" />
				<msg name="required" key="error.course.required" />
			</field>
			<field property="address" depends="required">
				<arg0 key="label.address" />
				<msg name="required" key="error.address.required" />
			</field>
		</form>
	</formset>

</form-validation>
